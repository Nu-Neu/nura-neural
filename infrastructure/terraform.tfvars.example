# ===========================================
# Nura Neural - Terraform Variables Example
# ===========================================
# Copy this file to terraform.tfvars and fill in your values.
# DO NOT commit terraform.tfvars to version control!
# ===========================================

# ===========================================
# Required: Azure Subscription
# ===========================================
subscription_id = "YOUR_AZURE_SUBSCRIPTION_ID"

# ===========================================
# Project Configuration
# ===========================================
project_name = "nura"

# ===========================================
# Existing Infrastructure References
# (Usually keep defaults unless using different environment)
# ===========================================
existing_resource_group  = "irdecode-prod-rg"
existing_aca_environment = "irdecode-prod-n8n-env"
existing_postgres_server = "irdecode-prod-psql"
existing_storage_account = "irdecodeprodst"
existing_key_vault       = "irdecode-prod-kv"
existing_acr_name        = "irdecodeprodacr"

# ===========================================
# Azure AI Search
# ===========================================
# Use "basic" for dev/testing (~$75/mo)
# Use "standard" for production (~$250/mo)
search_sku = "basic"

# ===========================================
# PostgreSQL Credentials
# Get these from Azure Key Vault or Portal
# ===========================================
postgres_user     = "YOUR_POSTGRES_ADMIN_USER"
postgres_password = "YOUR_POSTGRES_ADMIN_PASSWORD"

# ===========================================
# Miniflux Configuration
# ===========================================
miniflux_admin_user     = "admin"
miniflux_admin_password = "GENERATE_A_STRONG_PASSWORD_HERE"

# ===========================================
# API Keys (Optional - Phase 2)
# ===========================================
# Leave empty string if not using Twitter integration
twitterapi_io_key = ""

# ===========================================
# Resource Tags
# ===========================================
tags = {
  project     = "nura-neural"
  environment = "dev"
  managed_by  = "terraform"
  cost_center = "irdecode"
}